        <a class="left carousel-control leftOuterControl" href="#myCarousel" role="button" data-slide="prev">
            <span class="mobileControlHeader" style="position:relative; top:50%;">Games</span>
            <span class="glyphicon glyphicon-triangle-left" style="position:relative; top:50.5%; bottom:49.5%;
                color:white;"></span>
