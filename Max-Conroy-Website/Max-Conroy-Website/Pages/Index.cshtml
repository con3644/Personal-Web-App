    // continuously execute this function
    setInterval(
        function carouselEdits() {
            // check carousel controls to hide and show them when reaching the end and start 
            var $this = $('#myCarousel');
            if ($('.carousel-inner .item:first').hasClass('active')) {
                $this.children('.left.carousel-control').hide();
                $this.children('.right.carousel-control').show();
            }
            else if ($('.carousel-inner .item:last').hasClass('active')) {
                $this.children('.left.carousel-control').show();
                $this.children('.right.carousel-control').hide();
            }
            else {
                $this.children('.carousel-control').show();
            }

            // show different carousel image sizes for mobile and desktop
            var img = document.getElementById('future-S');
            var img2 = document.getElementById('future-L');
            if (isMobile) {
                img.style.display = ('none');
                img2.style.display = ('block');
            }
            else {
                img.style.display = ('block');
                img2.style.display = ('none');
            }

            // find window height and take 80%, then scale the carousel to that
            var clientHeight = $(window).height() * 0.8;
            $('.carousel-inner').css('height', clientHeight);
        }, 50);
</script>
